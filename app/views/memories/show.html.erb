<h1><%= link_to @memory.event.name, event_path(@memory.event) %>: <%= @memory.title %></h1>
<h2>by <%= link_to @memory.user.username, user_path(@memory.user) %></h2>

<p><%= @memory.body %>

<% if @memory.user.id == current_user.id %>
  <p><%= link_to 'Edit', edit_event_memory_path(@memory.event_id, @memory), method: :get %> <%= link_to 'Delete', memory_path(@memory), method: :delete %><p>
<% end %>